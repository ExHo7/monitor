# Configuration pour Proxmox VE Exporter
# Documentation: https://github.com/prometheus-pve/prometheus-pve-exporter

# Copiez ce fichier : cp prometheus/pve.yml.example prometheus/pve.yml
# NOTE: Ce fichier contient UNIQUEMENT les identifiants
# L'URL du serveur Proxmox est configurée dans prometheus/prometheus.yml

default:
  user: monitoring@pve
  password: CHANGEME_PASSWORD
  verify_ssl: false

# Pour utiliser un token API (recommandé en production) :
# default:
#   user: monitoring@pve
#   token_name: monitoring
#   token_value: xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
#   verify_ssl: false

# Vous pouvez définir plusieurs modules pour différents serveurs Proxmox :
# proxmox2:
#   user: monitoring@pve
#   password: AUTRE_PASSWORD
#   verify_ssl: false
